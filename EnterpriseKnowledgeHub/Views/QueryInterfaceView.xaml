<UserControl x:Class="EnterpriseKnowledgeHub.Views.QueryInterfaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Query Input -->
            <RowDefinition Height="*"/>     <!-- Results Area -->
            <RowDefinition Height="200"/>   <!-- Suggestions/History -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F8FAFC" Padding="20,15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="💬 Interfaz de Consultas Inteligentes" 
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Haz preguntas en lenguaje natural o escribe consultas SQL directamente" 
                               FontSize="14" 
                               Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔄 Limpiar" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ClearQueryCommand}"
                            Margin="5"/>
                    <Button Content="❓ Ayuda" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ShowQueryHelpCommand}"
                            Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Query Input Area -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E5E7EB" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Query Type Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Tipo de consulta:" 
                               VerticalAlignment="Center" 
                               FontWeight="Medium" 
                               Margin="0,0,10,0"/>
                    
                    <RadioButton Content="🗣️ Lenguaje Natural" 
                                 IsChecked="{Binding SelectedQueryType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Natural}"
                                 GroupName="QueryType" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,20,0"/>
                    
                    <RadioButton Content="💻 SQL Directo" 
                                 IsChecked="{Binding SelectedQueryType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=SQL}"
                                 GroupName="QueryType" 
                                 VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Query Input -->
                <TextBox Grid.Row="1" 
                         Text="{Binding CurrentQuery, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         MinHeight="80" 
                         MaxHeight="120"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" 
                                   Modifiers="Ctrl" 
                                   Command="{Binding ExecuteQueryCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,10,0,0">
                    
                    <Button Content="▶️ Ejecutar (Ctrl+Enter)" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ExecuteQueryCommand}"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                            Margin="5"/>
                    
                    <Button Content="📤 Exportar Resultados" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ExportResultsCommand}"
                            IsEnabled="{Binding LastQueryResult.Success}"
                            Margin="5"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Grid.Row="2" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           Orientation="Horizontal"
                           Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" 
                                Width="100" 
                                Height="20" 
                                Margin="0,0,10,0"/>
                    <TextBlock Text="Procesando consulta..." 
                              VerticalAlignment="Center"
                              FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Results Data -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,5,10">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Results Header -->
                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            Padding="15,10" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊 Resultados" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ResultCount, StringFormat='({0} registros)'}" 
                                           FontSize="14" 
                                           Foreground="#6B7280" 
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ExecutionTime}" 
                                           FontSize="12" 
                                           Foreground="#9CA3AF" 
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Error Message -->
                            <Border Background="#FEF2F2" 
                                    BorderBrush="#F87171" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10" 
                                    Margin="0,5,0,0"
                                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="❌" FontSize="16" VerticalAlignment="Top" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ErrorMessage}" 
                                               TextWrapping="Wrap" 
                                               Foreground="#DC2626"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Results Data Grid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding QueryResults}"
                              AutoGenerateColumns="True" 
                              IsReadOnly="True" 
                              GridLinesVisibility="Horizontal" 
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F9FAFB"
                              Margin="10">
                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </DataGrid.Style>
                    </DataGrid>

                    <!-- No Results Message -->
                    <StackPanel Grid.Row="1" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding QueryResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="No hay resultados que mostrar" 
                                   FontSize="16" 
                                   Foreground="#9CA3AF" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Ejecuta una consulta para ver los datos aquí" 
                                   FontSize="14" 
                                   Foreground="#D1D5DB" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Generated SQL (for natural language queries) -->
                    <Expander Grid.Row="2" 
                             Header="🔍 SQL Generado" 
                             Margin="10"
                             Visibility="{Binding GeneratedSql, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBox Text="{Binding GeneratedSql}" 
                                 IsReadOnly="True" 
                                 FontFamily="Consolas" 
                                 FontSize="12" 
                                 Background="#F8FAFC" 
                                 MaxHeight="100" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    </Expander>
                </Grid>
            </Border>

            <!-- Explanation Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="5,0,0,10">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Explanation Header -->
                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            Padding="15,10" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="🤖 Explicación IA" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <!-- Explanation Content -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Padding="15">
                        <TextBlock Text="{Binding ResultExplanation}" 
                                   TextWrapping="Wrap" 
                                   FontSize="14" 
                                   LineHeight="20"
                                   Foreground="#374151"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Suggestions and History -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Suggestions -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,5,0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            Padding="15,10" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="💡 Sugerencias" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Suggestions}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            HorizontalAlignment="Stretch" 
                                            HorizontalContentAlignment="Left"
                                            FontSize="12" 
                                            Padding="8,4" 
                                            Margin="0,2"
                                            Command="{Binding DataContext.UseSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Query History -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="5,0,0,0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            Padding="15,10" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="🕒 Historial" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding QueryHistory}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button HorizontalAlignment="Stretch" 
                                            HorizontalContentAlignment="Left"
                                            Style="{StaticResource ModernButtonStyle}"
                                            FontSize="11" 
                                            Padding="6,3" 
                                            Margin="0,1"
                                            Command="{Binding DataContext.ReuseHistoryQueryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusIcon}" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding TypeIcon}" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding DisplayText}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>