<Window x:Class="EnterpriseKnowledgeHub.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EnterpriseKnowledgeHub.ViewModels"
        mc:Ignorable="d"
        Title="Enterprise Knowledge Hub - Sage 200" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="pack://application:,,,/icon.ico">

    <Window.DataContext>
        <!-- El DataContext se asignará desde el código behind -->
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Content -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header con título y navegación -->
        <Border Grid.Row="0" Background="#2563EB" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Enterprise Knowledge Hub" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding WelcomeMessage}" 
                               FontSize="14" 
                               Foreground="#E5E7EB" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔄 Refrescar" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding RefreshDashboardCommand}"
                            Margin="5"/>
                    <Button Content="❓ Ayuda" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding ShowHelpCommand}"
                            Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>    <!-- Panel lateral -->
                <ColumnDefinition Width="*"/>      <!-- Área principal -->
            </Grid.ColumnDefinitions>

            <!-- Panel lateral con navegación -->
            <Border Grid.Column="0" 
                    Background="#F9FAFB" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        
                        <!-- Estado del sistema -->
                        <TextBlock Text="Estado del Sistema" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <StackPanel Margin="0,10">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="12" Height="12" 
                                         Fill="{Binding IsDatabaseConnected, Converter={StaticResource BoolToColorConverter}}" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Base de Datos" 
                                           Margin="8,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="12" Height="12" 
                                         Fill="{Binding IsOllamaConnected, Converter={StaticResource BoolToColorConverter}}" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Ollama IA" 
                                           Margin="8,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="{Binding DatabaseInfo}" 
                                   FontSize="12" 
                                   Foreground="#6B7280" 
                                   TextWrapping="Wrap"
                                   Margin="0,5"/>
                        
                        <TextBlock Text="{Binding AiModelInfo}" 
                                   FontSize="12" 
                                   Foreground="#6B7280" 
                                   TextWrapping="Wrap"
                                   Margin="0,5"/>

                        <!-- Navegación principal -->
                        <Separator Margin="0,20"/>
                        
                        <TextBlock Text="Navegación" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <Button Content="🏠 Dashboard" 
                                Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5"
                                Click="ShowDashboard_Click"/>
                        
                        <Button Content="🗃️ Explorar Base de Datos" 
                                Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5"
                                Command="{Binding OpenDatabaseExplorerCommand}"/>
                        
                        <Button Content="💬 Interfaz de Consultas" 
                                Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5"
                                Command="{Binding OpenQueryInterfaceCommand}"/>

                        <!-- Estadísticas rápidas -->
                        <Separator Margin="0,20"/>
                        
                        <TextBlock Text="Estadísticas Rápidas" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <ItemsControl ItemsSource="{Binding QuickStats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="10" 
                                            Margin="0,3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Icon}" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,8,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="11" 
                                                           Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding Value}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Consultas recientes -->
                        <Separator Margin="0,20"/>
                        
                        <TextBlock Text="Consultas de Ejemplo" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <ItemsControl ItemsSource="{Binding RecentQueries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            Margin="0,2"
                                            Padding="8,4"
                                            FontSize="11"
                                            Click="ExampleQuery_Click"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Área principal de contenido -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8">
                
                <Grid>
                    <!-- Overlay de carga -->
                    <Border Background="#80FFFFFF" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            Panel.ZIndex="100">
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" 
                                         Width="100" 
                                         Height="20" 
                                         Margin="0,0,0,10"/>
                            <TextBlock Text="Cargando..." 
                                       HorizontalAlignment="Center" 
                                       FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Contenido principal dinámico -->
                    <ContentControl x:Name="MainContentArea" Margin="20">
                        <!-- Dashboard por defecto -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Bienvenido al Enterprise Knowledge Hub" 
                                           Style="{StaticResource HeaderTextStyle}"/>
                                
                                <TextBlock TextWrapping="Wrap" 
                                           FontSize="16" 
                                           Foreground="#4B5563" 
                                           Margin="0,0,0,30">
                                    Este sistema te permite explorar y consultar la base de datos de Sage 200 
                                    de manera intuitiva. Puedes hacer preguntas en lenguaje natural y obtener 
                                    explicaciones detalladas de los datos.
                                </TextBlock>

                                <!-- Funcionalidades principales -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Tarjeta Explorador -->
                                    <Border Grid.Row="0" Grid.Column="0" 
                                            Background="#F0F9FF" 
                                            BorderBrush="#0EA5E9" 
                                            BorderThickness="1" 
                                            CornerRadius="8" 
                                            Padding="20" 
                                            Margin="0,0,10,10">
                                        <StackPanel>
                                            <TextBlock Text="🗃️ Explorador de Base de Datos" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Margin="0,0,0,15">
                                                Navega por las tablas, visualiza datos y entiende 
                                                la estructura de tu base de datos Sage 200.
                                            </TextBlock>
                                            <Button Content="Explorar Datos" 
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding OpenDatabaseExplorerCommand}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tarjeta Consultas -->
                                    <Border Grid.Row="0" Grid.Column="1" 
                                            Background="#F0FDF4" 
                                            BorderBrush="#22C55E" 
                                            BorderThickness="1" 
                                            CornerRadius="8" 
                                            Padding="20" 
                                            Margin="10,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="💬 Consultas Inteligentes" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Margin="0,0,0,15">
                                                Haz preguntas en lenguaje natural y obtén respuestas 
                                                inteligentes con explicaciones detalladas.
                                            </TextBlock>
                                            <Button Content="Hacer Consultas" 
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding OpenQueryInterfaceCommand}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tarjeta Ayuda -->
                                    <Border Grid.Row="1" Grid.Column="0" 
                                            Background="#FEF7FF" 
                                            BorderBrush="#A855F7" 
                                            BorderThickness="1" 
                                            CornerRadius="8" 
                                            Padding="20" 
                                            Margin="0,10,10,0">
                                        <StackPanel>
                                            <TextBlock Text="📚 Centro de Aprendizaje" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Margin="0,0,0,15">
                                                Aprende sobre Sage 200, SQL y cómo interpretar 
                                                los datos empresariales con explicaciones claras.
                                            </TextBlock>
                                            <Button Content="Ver Ayuda" 
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding ShowHelpCommand}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tarjeta Estado -->
                                    <Border Grid.Row="1" Grid.Column="1" 
                                            Background="#FFFBEB" 
                                            BorderBrush="#F59E0B" 
                                            BorderThickness="1" 
                                            CornerRadius="8" 
                                            Padding="20" 
                                            Margin="10,10,0,0">
                                        <StackPanel>
                                            <TextBlock Text="⚙️ Estado del Sistema" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,10"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Margin="0,0,0,15">
                                                Verifica las conexiones y el estado de todos 
                                                los componentes del sistema.
                                            </TextBlock>
                                            <Button Content="Verificar Estado" 
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding TestConnectionsCommand}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Barra de estado -->
        <Border Grid.Row="2" 
                Background="#F3F4F6" 
                BorderBrush="#E5E7EB" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Enterprise Knowledge Hub - Sage 200 Database Explorer" 
                           FontSize="12" 
                           Foreground="#6B7280"/>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding DatabaseInfo}" 
                               FontSize="12" 
                               Foreground="#6B7280" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding AiModelInfo}" 
                               FontSize="12" 
                               Foreground="#6B7280"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>